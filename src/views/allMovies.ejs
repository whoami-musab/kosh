<%- include('header', {title: 'Movies', movie: movie}) %>

<div class="all-movies flex flex-col mx-auto container min-h-screen w-full px-5">
    <h1 class="text-2xl font-bold underline py-5">List of series</h1>
    <div class="all-movie w-full flex gap-3 items-center justify-center flex-wrap">
        <% movie.forEach(movies => { %>
            <a href="movies/<%=movies._id %>" target="_blank" class="w-[235px] h-[435px] overflow-hidden">
                <div class="all-movies content text-center gap-2 flex flex-col">
                    <div class="img h-[335px overflow-hidden">
                        <img src="<%= movies.imgPath %>" alt="<%= movies.title %>" class="w-[235px] h-[340px] hover:rounded rounded hover:scale-110 transition-transform" />
                    </div>
                    <p>
                        <%= movies.title %>
                    </p>
                    <p class="w-[235px] h-[1rem]">
                        <%= movies.description %>
                    </p>
                    <!-- Dynamic Star Rating -->
                    <% for (let i = 0; i < movies.rating; i++) { %>
                        <i class="fa fa-star"></i>
                    <% } %>
                    <!-- Optional: Display empty stars if needed -->
                    <% for (let i = movies.rating; i < 5; i++) { %>
                        <i class="fa fa-star-o"></i>
                    <% } %>
                </div>
            </a>
        <% }); %>
    </div>
</div>

<%- include('footer') %>
